files:
  "/opt/custom/python-env":
    mode: "000644"
    owner: root
    group: root
    content: |
      source /opt/python/run/venv/bin/activate
      source /opt/python/current/env

  "/etc/cron.d/scraper":
      mode: "000644"
      owner: root
      group: root
      content: |
        0 * * * * root    source /opt/custom/python-env && django-admin.py runscrapers > /var/log/scraper.log 2>&1

container_commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/*.bak"
