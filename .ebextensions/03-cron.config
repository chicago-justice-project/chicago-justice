files:
  "/usr/local/bin/runscrapers.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      export $(/opt/elasticbeanstalk/bin/get-config environment | jq -r 'to_entries|map("\(.key)=\(.value|tostring)")|.[]')
      source /var/app/venv/*/bin/activate
      python /var/app/current/manage.py runscrapers

  "/etc/cron.d/scraper":
      mode: "000644"
      owner: root
      group: root
      content: |
        */15 * * * * root    /usr/local/bin/runscrapers.sh > /var/log/scraper.log 2>&1

  "/etc/cron.d/scraperhealth":
      mode: "000644"
      owner: root
      group: root
      content: |
        0 20 * * * root    /opt/custom/python-env.sh && python /var/app/current/manage.py runhealthcheck cjpdatasite@gmail.com Tsiska@chicagojustice.org mchladek@gmail.com cjphealthcheck@mailinator.com > /var/log/scraperhealth.log 2>&1

  "/etc/cron.d/dbexport":
      mode: "000644"
      owner: root
      group: root
      content: |
        30 6 * * * root    /opt/custom/python-env.sh && /var/app/current/scripts/db_export.sh

  "/etc/cron.d/sentiment":
      mode: "000644"
      owner: root
      group: root
      content: |
        0 3 * * * root    /opt/custom/python-env.sh && python /var/app/current/manage.py runsentiment both > /var/log/sentiment.log 2>&1

container_commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/*.bak"
